<?xml version="1.0" encoding="UTF-8"?>
<assembly
xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>QAI</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <lineEnding>unix</lineEnding>
            <fileMode>744</fileMode>
            <directory>${basedir}/src/main/build/QAI</directory>
            <includes>
                <include>dt_router_export.sh</include>
                <include>dt_router_import.sh</include>
                <include>dt_router_order.sh</include>
                <include>router_export.sh</include>
                <include>router_import.sh</include>
                <include>router_order.bat</include>
                <include>router_export.bat</include>
                <include>router_import.bat</include>
                <include>router_order.sh</include>
                <include>Rtr_Check.sh</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <lineEnding>unix</lineEnding>
            <directory>${basedir}/src/main/build/QAI/resources</directory>
            <includes>
                <include>client-messaging.properties</include>
                <include>cdb-database.properties</include>
                <include>log4j.properties</include>
                <include>router-configuration.xml</include>
                <include>router-configuration.xsd</include>
                <include>routing-rules.xml</include>
                <include>routing-rules.xsd</include>
            </includes>
            <outputDirectory>/resources</outputDirectory>
        </fileSet>
        <fileSet>
          <!--  DB2 Drivers & other jars-->
          <directory>${basedir}/src/main/ext-lib</directory>
          <includes>
              <include>*.jar</include>
          </includes>
          <outputDirectory>/lib</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>